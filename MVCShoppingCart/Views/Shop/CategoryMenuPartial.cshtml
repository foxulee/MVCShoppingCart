@model IEnumerable<MVCShoppingCart.Models.ViewModels.Shop.CategoryViewModel>

<h3>Categories</h3>


<div>
    @foreach (var item in Model)
    {
        if (@ViewBag.Category == @item.Slug)
        {
            <a href="/shop/category/@item.Slug.ToLower()" class="list-group-item active">@item.Name</a>
        }
        else
        {
            <a href="/shop/category/@item.Slug.ToLower()" class="list-group-item">@item.Name</a>
        }

    }
</div>